{
  "Get the Dir of shell script": {
    "prefix": "shell_dir",
    "body": [
      "SCRIPT_DIR=\"$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)\""
    ],
    "description": "Get the Dir of shell script"
  },
  "Shell color": {
    "prefix": "shell_color",
    "body": [
      "# 使用tput定义颜色",
      "RED=$(tput setaf 1)",
      "GREEN=$(tput setaf 2)",
      "YELLOW=$(tput setaf 3)",
      "BLUE=$(tput setaf 4)",
      "RESET=$(tput sgr0)",
      "# # 使用示例",
      "# echo \"${GREEN}错误信息${RESET}\"",
      "# echo \"${RED}成功信息${RESET}\"",
      "",
      "# status",
      "OK=\"\\${GREEN}[ok] \"",
      "ERROR=\"\\${RED}[err] \"",
      ""
    ],
    "description": "set the color for shell"
  },
  "show help": {
    "prefix": "shell_help",
    "body": [
      "function show_help() {",
      "    cat << EOF",
      "Usage: $0 [options]",
      "",
      "Options:",
      "    -h, --help      Display this help message",
      "    -v, --version   Display version information",
      "    -f, --file FILE Specify input file",
      "    -q, --quiet     Run in quiet mode",
      "",
      "Examples:",
      "    $0 -f input.txt",
      "    $0 --quiet",
      "EOF",
      "}",
      "",
      "# 主程序",
      "case \"$1\" in",
      "    -h|--help)",
      "        show_help",
      "        exit 0",
      "        ;;",
      "    # 其他参数处理...",
      "esac"
    ],
    "description": "shell shows help"
  }
}
